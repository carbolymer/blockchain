name:                blockchain
version:             0.1.0.0
-- synopsis:
-- description:
homepage:            https://github.com/carbolymer/blockchain#readme
license:             BSD3
license-file:        LICENSE
author:              Carbolymer
maintainer:          example@example.com
copyright:           2017 carbolymer
category:            Blockchain
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Blockchain
  build-depends:       base >= 4.7 && < 5
                     , bytestring >= 0.10.8
                     , cryptohash-sha256 >= 0.11.100
                     , mtl >= 2.2.1
                     , text >= 1.2.2
                     , time >= 1.8.0
  default-language:    Haskell2010

executable blockchain-exe
  hs-source-dirs:      app
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N -O2 -Wall -optc-O2
  default-extensions:  OverloadedStrings
  build-depends:       base
                     , blockchain
  default-language:    Haskell2010

test-suite blockchain-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base
                     , blockchain
                     , hspec
                     , HUnit
                     , mtl >= 2.2.1
                     , QuickCheck
                     , time >= 1.8.0
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-extensions:  OverloadedStrings
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/carbolymer/blockchain
